<serverConfiguration>
  <defaultServerConfiguration>localH2</defaultServerConfiguration>
  <serverConfigurations>
    <server>
      <type>localH2</type>
      <name>localH2</name>
      <!--
      <filename>c:\stackable\analyticalmetlx\localh2.db</filename>
      -->
    </server>
    <server>
      <type>transientLoopback</type>
    </server>
    <server>
      <type>frontend</type>
    </server>
  </serverConfigurations>
  <authentication>
		<mock formSelector="#loginForm" usernameSelector="#usernameInput" passwordSelector="#passwordInput">
			<template>
				<div>
					<h2>Login to MeTL</h2>
					<div>Please choose a password.  Use only alphanumeric characters.
					</div>
					<form id="loginForm">
						<label for="usernameInput">Username</label>
						<input type="text" id="usernameInput"></input>
						<input type="hidden" id="passwordInput" value="mockPassword"></input>
						<input type="submit" value="Login">c</input>
					</form>
				</div>
			</template>
		</mock>
  </authentication>
  <groupsProvider>
    <!-- as many groupsProviders can be used at a time -->
    <selfGroups/>
  </groupsProvider>
	<!--<stackAdaptor enabled="false" mongoHost="127.0.0.1" mongoPort="27017" mongoDb="stack"/>  -->
</serverConfiguration>
